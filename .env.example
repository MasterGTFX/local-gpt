# LLM API Configuration
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=https://openrouter.ai/api/v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/localgpt

# Authentication Configuration
# Enable/disable authentication (default: false for backward compatibility)
AUTH_ENABLED=false

# Default admin user (created on first run if no admin exists)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# Session Configuration
SESSION_TIMEOUT_DAYS=1

# Optional: Set custom port (default: 7860)
# PORT=7860

# Optional: Set Gradio theme (glass, monochrome, soft, base, default - default: glass)
# GRADIO_THEME=glass